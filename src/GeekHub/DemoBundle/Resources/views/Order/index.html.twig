{% extends 'base.html.twig' %}

{% block title %}Orders list{% endblock %}

{% block content %}
    {% if orders|length > 0 %}
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Number</th>
                    <th>Price</th>
                    <th>Owner</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td><a href="{{ path('order_detail', {'id': loop.index}) }}">{{ order.number|e }}</a></td>
                        <td>{{ order.price }}</td>
                        <td>user</td>
                    </tr>
                    {#{{ include('GeekHubDemoBundle:Order/partials:_table_row.html.twig', { 'order': order }) }}#}
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block product %}
    {{ render(controller(
        'GeekHubDemoBundle:Product:index',
        { 'max': 3 }
    )) }}
{% endblock %}
